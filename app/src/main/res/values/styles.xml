<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    
    <!-- Estilos para los componentes de UI comunes en modo claro -->
    <style name="Widget.GastroApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/principal_green</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <style name="Widget.GastroApp.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/principal_green</item>
        <item name="strokeColor">@color/principal_green</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <style name="Widget.GastroApp.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/principal_green</item>
        <item name="hintTextColor">@color/principal_green</item>
    </style>
    
    <style name="Widget.GastroApp.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>
    
    <style name="Widget.GastroApp.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/principal_green</item>
        <item name="itemTextColor">@color/principal_green</item>
        <item name="itemRippleColor">@color/principal_green_transparent</item>
        <item name="backgroundColor">@color/surface</item>
        <item name="elevation">8dp</item>
    </style>
    
    <style name="Widget.GastroApp.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/surface</item>
        <item name="titleTextColor">@color/principal_green</item>
        <item name="subtitleTextColor">@color/text_secondary</item>
    </style>
    
    <style name="Widget.GastroApp.EditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/hint_text</item>
    </style>
    
    <style name="Widget.GastroApp.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorHint">@color/hint_text</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:background">@drawable/search_background</item>
    </style>
    
    <style name="Widget.GastroApp.TextView.Title" parent="TextAppearance.GastroApp.Headline1">
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="Widget.GastroApp.TextView.Subtitle" parent="TextAppearance.GastroApp.Subtitle1">
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="Widget.GastroApp.TextView.Body" parent="TextAppearance.GastroApp.Body1">
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="Widget.GastroApp.TextView.Caption" parent="TextAppearance.GastroApp.Caption">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources> 