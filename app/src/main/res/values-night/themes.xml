<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme para modo oscuro -->
    <style name="Base.Theme.GastroApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="29">true</item>
        <item name="colorPrimary">@color/principal_green_light</item>
        <item name="colorPrimaryVariant">@color/principal_green</item>
        <item name="colorPrimaryContainer">@color/principal_green_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/secondary_green</item>
        <item name="colorSecondaryVariant">@color/principal_green_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        <item name="colorOnBackground">@color/text_primary_dark</item>
        <item name="android:colorBackground">@color/surface_dark</item>
        <item name="colorError">@color/error_dark</item>
        
        <!-- Estados de la barra -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
        
        <!-- Los estilos de texto estÃ¡n definidos en el tema base y referenciados correctamente -->
    </style>

    <style name="Theme.GastroApp" parent="Base.Theme.GastroApp" />

    <style name="Theme.App.Launcher" parent="Theme.GastroApp">
        <item name="android:windowBackground">@color/ic_launcher_background_dark</item>
    </style>
    
    <!-- Estilos para los componentes de UI en modo oscuro -->
    <style name="Widget.GastroApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/principal_green_light</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <style name="Widget.GastroApp.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/principal_green_light</item>
        <item name="strokeColor">@color/principal_green_light</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <style name="Widget.GastroApp.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/principal_green_light</item>
        <item name="hintTextColor">@color/principal_green_light</item>
        <item name="android:textColorHint">@color/hint_text_dark</item>
    </style>

    <style name="Widget.GastroApp.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/surface_dark</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="Widget.GastroApp.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/principal_green_light</item>
        <item name="itemTextColor">@color/principal_green_light</item>
        <item name="backgroundColor">@color/surface_dark</item>
    </style>

    <style name="Widget.GastroApp.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/surface_dark</item>
        <item name="titleTextColor">@color/principal_green_light</item>
        <item name="subtitleTextColor">@color/text_secondary_dark</item>
    </style>

    <style name="Widget.GastroApp.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorHint">@color/hint_text_dark</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:background">@color/surface_variant_dark</item>
    </style>
</resources>

